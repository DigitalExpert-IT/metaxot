generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ERC721 {
  id           Int         @id @default(autoincrement())
  description  String
  external_url String
  image        String
  name         String
  uuid         String?     @default(uuid())
  attributes   Attribute[]

  @@index([id, uuid])
}

model Attribute {
  id           Int     @id @default(autoincrement())
  display_type String?
  trait_type   String?
  value        String?
  erc721       ERC721  @relation(fields: [erc721Id], references: [id])
  erc721Id     Int
}
